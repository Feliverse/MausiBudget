<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <header class="d-flex justify-content-between align-items-center">
    <h4 class="p-2" onclick="history.back()"> â¬± </h4>
    <h4 class="p-2">LOGIN</h4>
    <small class="actions p-2">
      <%= f.submit "Next", class: "btn btn-primary" %>
    </small>
  </header>
  <div class='col-11 col-sm-8 col-md-10 mx-auto pt-5' >
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", label_as_placeholder: true, class: 'py-3' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", label_as_placeholder: true, class: 'py-3' %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>
<% end %>


