<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <header class="d-flex justify-content-between align-items-center">
    <h2 class="p-2" onclick="history.back()"> â¬± </h2>
    <h5 class="p-2">REGISTER</h5>
    <div class="actions p-2">
      <%= f.submit "Next", class: "btn btn-primary" %>
    </div>
  </header>
  <div class='col-11 col-sm-8 col-md-10 mx-auto pt-5' >
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", label_as_placeholder: true, class: 'py-3' %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", label_as_placeholder: true, class: 'py-3' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", label_as_placeholder: true, class: 'py-3' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", label_as_placeholder: true, class: 'py-3' %>
    </div>
  </div>
  
<% end %>

